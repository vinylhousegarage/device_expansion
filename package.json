{
  "name": "app",
  "version": "0.1.0",
  "description": "DEVICE_EXPANSION",
  "main": "index.js",
  "repository": "git@github.com:vinylhousegarage/device_expansion.git",
  "author": "Satoshi Kamazawa",
  "license": "MIT",
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.10",
    "esbuild": "^0.24.0",
    "esbuild-rails": "^1.0.7",
    "npm": "^10.9.0",
    "yarn": "^1.22.22"
  },
  "scripts": {
    "build": "yarn build:js && yarn build:css",
    "build:js": "esbuild app/javascript/application.js --bundle --sourcemap --outdir=public/assets",
    "build:css": "esbuild app/assets/stylesheets/application.css --bundle --loader=css --outfile=public/assets/application.css",
    "dev": "esbuild app/javascript/application.js --bundle --sourcemap --watch --outdir=public/assets",
    "build:production": "cross-env NODE_ENV=production yarn build"
  },
  "devDependencies": {
    "cross-env": "^7.0.3"
  }
}
