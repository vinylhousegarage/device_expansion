<%= render 'shared/user_info' %><br>

<table>
  <tr>
    <th>　No.　</th>
    <th>　氏名　</th>
    <th>　金額　</th>
    <th>入力担当</th>
  </tr>

  <% @posts.each_with_index do |post, index| %>

  <tr>
    <td><%= index + 1 %><%= '　' %></td>
    <td><%= post.name %><%= '　' %></td>
    <td><%= number_with_delimiter(post.amount) %><%= ' 円' %><%= '　' %></td>
    <td><%= post.user.name %><%= '　' %></td>
    <td><%= button_to '詳細', user_post_path(@user_stats_by_id.id, post), method: :get %></td>
  </tr>

  <% end %>
</table>

<p></p>
<table>
  <tr>
    <td><b>新規登録へ戻る　</b></td>
    <td><%= button_to '戻る', new_post_path, method: :get %></td>
  </tr>
</table>

<% if @user_stats_by_id.user_name == '集計担当' %>
<table>
  <tr>
    <td><b>初期画面へ戻る　</b></td>
    <td><%= button_to '戻る', new_user_path, method: :get %></td>
  </tr>
</table>
<% end %>
