<h3>登録一覧</h3><br>
<div>
  <table>
    <tr>
      <th>No.</th>
      <th>氏名</th>
      <th>金額</th>
      <th>担当</th>
    </tr>

    <% @posts.each_with_index do |post, index| %>

    <tr>
      <td><%= index + 1 %><%= '　' %></td>
      <td><%= post.name %><%= '　' %></td>
      <td><%= number_with_delimiter(post.amount) %><%= ' 円' %><%= '　' %></td>
      <td><%= post.user.name %><%= '　' %></td>
      <td><%= button_to '詳細', post_path(post), method: :get, data: { turbo: false }, id: "invite-button-#{post.id}" %></td>
    </tr>

    <% end %>
  </table>
</div>

<p></p>

<div>
  <table>
    <tr>
      <td><b>登録状況へ戻る　</b></td>
      <td><%= button_to '状況', users_path, method: :get %></td>
    </tr>
  </table>
</div>
