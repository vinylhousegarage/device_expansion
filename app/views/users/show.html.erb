<%= render 'shared/user_info' %><br>
<h3><%= @params_find_user.name %>さんの登録一覧</h3>
<table>
  <tr>
    <th>No.</th>
    <th>氏　名</th>
    <th>金　額</th>
  </tr>

  <% @user_posts.each_with_index do |user_post, index| %>

  <tr>
    <td><%= index + 1 %></td>
    <td><%= user_post.name %></td>
    <td><%= '　' %><%= number_with_delimiter(user_post.amount) %><%= ' 円　' %></td>
    <td><%= button_to '詳細', post_path(user_post), method: :get %></td>
  </tr>

  <% end %>
</table>
<br>
<% if session[:user_id] == 6 %>
  <%= button_to "新規登録へ戻る", new_post_path, method: :get %>
  <br>
  <%= button_to "登録状況へ戻る", users_path, method: :get %>
  <br>
  <%= button_to "初期画面へ戻る", new_user_path, method: :get %>
<% else %>
  <%= button_to "新規登録へ戻る", new_post_path, method: :get %>
<% end %>
